# Server Configuration
PORT=4000
# Make sure this matches the frontend API URL configuration
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/securerealtime?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"
# Make sure this matches your frontend URL

# Redis Configuration (Optional - for caching and real-time features)
REDIS_URL="redis://localhost:6379"

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/*,application/pdf,text/*,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"
UPLOAD_PATH="./uploads"

# Encryption Configuration
WORKSPACE_ENCRYPTION_KEY="your-workspace-encryption-key-32-chars"
FILE_ENCRYPTION_ENABLED=true

# WebSocket Configuration
WEBSOCKET_CORS_ORIGIN="http://localhost:3000"
WEBSOCKET_TRANSPORTS="websocket,polling"
# WebSocket namespaces: /chat and /documents

# Email Configuration (Optional)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="noreply@yourapp.com"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="combined"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-key"

# Analytics & Monitoring (Optional)
SENTRY_DSN=""
ANALYTICS_ENABLED=false

# Third-party Integrations (Optional)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_REGION="us-east-1"

# Development/Testing
DEBUG=false
MOCK_EXTERNAL_SERVICES=false
